{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": ["node"],
        "moduleResolution": "node",
        "rootDir": "client",
        "noImplicitAny": false,
        "baseUrl": "client",
        "outDir": "comp/dist",
        "target": "es5",
        "lib": [ "es6", "dom"],
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "./typings"
         ]
    },
    "include": [
        "client"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": true
    
}
